
<%= @movie.name %>
<%= @movie.year %>
<%= @movie.genre %>

<%= "Average Actor Age: #{@movie.average_actor_age.round}" %>

<%= form_tag "/movies/#{@movie.id}", method: :patch do %>
  <%= label_tag :name %>
  <%= text_field_tag :name %>
  <%= submit_tag 'Add Actor to Movie' %>
<% end %>

<%= @movie.sort_actors.each do |actor| %>
<%= actor.name %>
<% end %>
